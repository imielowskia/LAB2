<div id="<%= dom_id student %>">

  <div class="row bg-light border border-primary border-bottom-0 p-2">
    <div class="col-1 ms-5 h5">Imię:</div>
    <div class="col-2 ms-auto h5"><%= student.imie %></div>
    <div class="col-1 ms-auto h5">Nazwisko:</div>
    <div class="col-2 ms-auto h5"><%= student.nazwisko %></div>
    <div class="col-1 ms-auto h5">Indeks:</div>
    <div class="col-2 ms-auto h5"><%= student.indeks %></div>
  </div>
  <div class="row bg-light border border-primary border-top-0 p-2">
    <div class="col-1 ms-5 h6 ">Grupa:</div>
    <div class="col-2 ms-auto h6"><%= student.group.nazwa %></div>
    <div class="col-1 ms-auto h6">Przedmioty:</div>
    <div class="col ms-2">
      <ol class="list-group list-group-numbered">
        <% student.group.courses.each do |c| %>
          <li class="list-group-item h6"><%= c.nazwa %> <%= link_to "Oceń", grade_student_path(student, course_id: c.id), class: "btn btn-sm btn-danger" %></li>
        <% end %>
      </ol>
    </div>
    <div class="col-1"><%= link_to "Edit", edit_student_path(student), class: "btn btn-sm btn-primary" %></div>
    <div class="col-1"><%= button_to "Destroy", @student, method: :delete, class: "btn btn-sm btn-primary" %></div>
  </div>


</div>
