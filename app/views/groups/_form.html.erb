    <div class="col-1 md-auto h5"><%= form.label :semestr, style: "display: block" %></div>
    <div class="col-4 md-auto h5"><%= form.number_field :semestr %></div>
    <div class="col"><%= form.submit "Zapisz", class: "btn btn-primary" %></div>
  </div>



  <div class="row bg-info justify-content-center justify-content-between border border-danger border-top-0 p-3">
    <div class="col-6 md-auto">
      <%= form.collection_check_boxes :course_ids, Course.all, :id, :nazwa, {}, {class: "form-check form-check-inline"}  %>
    </div>

  </div>

  <div>

  </div>
<% end %>
