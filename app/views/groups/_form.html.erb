  <% if group.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
        <% group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row bg-info border border-danger border-bottom-0 p-3 ">
    <div class="col-1 md-auto h5"><%= form.label :nazwa, style: "display: block" %></div>
